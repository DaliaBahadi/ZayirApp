@page "/Gate/Details/{Id:int}"

@inject GateService GService

<h3>Gate Details</h3>

<table>

    <tr>
        <td>Name: </td>
        <td>@gate.Name</td>
    </tr>

    <tr>
        <td>Description: </td>
        <td>@gate.Description</td>
    </tr>

    <tr>
        <td>Evacuation Details: </td>
        <td>@gate.EvacuationDetails</td>
    </tr>

    <tr>
        <td>Evacuation Plan File: </td>
        <td>@gate.EvacuationPlanFile</td>
    </tr>

</table>

<br />
<a href="/Gate/List" class="btn btn-outline-secondary" role="button">Cancel</a>

@code {

    Gate gate = new Gate();

    [Parameter]
    public int Id { get; set; }

    protected override void OnInitialized()
    {
        gate = GService.GetGate(Id);
    }
}


